@model Hotel_Rsesrvations.Models.ReservationClient

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Редактиране на резервация-клиент връзка</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="ReservationId" class="control-label">Резервация</label>
        <select asp-for="ReservationId" class="form-control" asp-items="ViewBag.ReservationId"></select>
    </div>
    <div class="form-group">
        <label asp-for="ClientId" class="control-label">Клиент</label>
        <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Запази" class="btn btn-primary" />
    </div>
</form>

    </div>
</div>

<div>
    <a asp-action="Index">Назад към списък с резервация-клиент връзки</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
