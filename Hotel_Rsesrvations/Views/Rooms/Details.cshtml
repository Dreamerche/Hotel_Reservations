@model Hotel_Rsesrvations.Models.Room

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Детайли за стая</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Вместимост
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.capacity)
        </dd>
        <dt class="col-sm-2">
            Тип стая
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.roomType)
        </dd>
        <dt class="col-sm-2">
            Заета ли е
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.isOccupied)
        </dd>
        <dt class="col-sm-2">
            Цена нощувка за възрастен
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.priceForAdult)
        </dd>
        <dt class="col-sm-2">
            Цена нощувка за дете
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.priceForChild)
        </dd>
        <dt class="col-sm-2">
            Номер
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.number)
        </dd>

        @if (Model.Reservations.Count >0)
        {
            <dt class="col-sm-2">Резервирана в периодите:<br /></dt>
            <dd class="col-sm-10">
                @foreach (var Item in Model.Reservations)
                {

                    <a asp-controller="Reservations" asp-action="Details" asp-route-id="@Item.Id">

                        @Item.checkInDate - @Item.vacatingDate<br />
                    </a>

                }
            </dd>
                }
            </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Редактирай</a> |
    <a asp-action="Index">Назад към стаи</a>
</div>
