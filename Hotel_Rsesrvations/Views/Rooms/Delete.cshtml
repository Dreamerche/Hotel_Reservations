@model Hotel_Rsesrvations.Models.Room

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Изтриване на стая</h1>

<h3>Сигурни ли сте, че искате да изтриете тази стая?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Вместимост
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.capacity)
        </dd>
        <dt class = "col-sm-2">
            Тип стая
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.roomType)
        </dd>
        <dt class = "col-sm-2">
            Заета ли е
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.isOccupied)
        </dd>
        <dt class = "col-sm-2">
            Цена нощувка за възрастен
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.priceForAdult)
        </dd>
        <dt class = "col-sm-2">
            Цена нощувка за дете
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.priceForChild)
        </dd>
        <dt class = "col-sm-2">
            Номер
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.number)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Изтрий" class="btn btn-danger" /> |
        <a asp-action="Index">Назад към стаи</a>
    </form>
</div>
