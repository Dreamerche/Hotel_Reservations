@model Hotel_Rsesrvations.Models.Room

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Създаване на стая</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="capacity" class="control-label">Вместимост(души)</label>
                <input asp-for="capacity" class="form-control" />
                <span asp-validation-for="capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="roomType" class="control-label">Тип стая</label>
                <input asp-for="roomType" class="form-control" />
                <span asp-validation-for="roomType" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isOccupied" /> заета ли е стаята
                </label>
            </div>
            <div class="form-group">
                <label asp-for="priceForAdult" class="control-label">Цена нощувка за възрастен</label>
                <input asp-for="priceForAdult" class="form-control" />
                <span asp-validation-for="priceForAdult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="priceForChild" class="control-label">Цена нощувка за дете</label>
                <input asp-for="priceForChild" class="form-control" />
                <span asp-validation-for="priceForChild" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="number" class="control-label">Номер</label>
                <input asp-for="number" class="form-control" />
                <span asp-validation-for="number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Създай" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад към стаи</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
