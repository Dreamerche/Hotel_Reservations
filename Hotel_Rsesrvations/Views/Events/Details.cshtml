@model Hotel_Rsesrvations.Models.Event

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <img src="@Html.DisplayFor(model=> model.photoLink)" onerror="this.onerror=null; this.src='../../lib/bootstrap/dist/css/img_if_not_having_event_photo_found.jpg'" width="150px" />
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.premiereDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.premiereDate)
        </dd>
        @if (Model.Tickets.Count > 0)
        {
            <dt class="col-sm-2">Резервирана в периодите:<br /></dt>
            <dd class="col-sm-10">
                @foreach (var Item in Model.Tickets)
                {

                    <a asp-controller="Tickets" asp-action="Details" asp-route-id="@Item.Id">

                        @Item.User.UserName  |  @Item.User.Email<br />
                    </a>

                }
            </dd>
        }
    </dl>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
