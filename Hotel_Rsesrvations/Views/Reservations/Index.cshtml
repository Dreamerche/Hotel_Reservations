@model IEnumerable<Hotel_Rsesrvations.Models.Reservation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
    <script>$(document).ready(function () {
            $('#indexTable').DataTable();
        });</script>
}
<h1>Резервации</h1>

<p>
    <a asp-action="Create">Създаване на нова резервация</a>
</p>
<div class="table-responsive">
    <table id="indexTable" class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    Стая
                </th>
                <th>
                    Настаняване
                </th>
                <th>
                     Освобождаване
                </th>
                <th>
                    Закуска
                </th>
                <th>
                    AllInclusive
                </th>
                <th>
                    Сума
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room.roomType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.checkInDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.vacatingDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.includingBreakfast)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.isAllInclusive)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.totalPrice) лв.
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Редактирай</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Детайли</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Изтрий</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>