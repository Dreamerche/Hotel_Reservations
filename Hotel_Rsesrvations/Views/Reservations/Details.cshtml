@model Hotel_Rsesrvations.Models.Reservation

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Детайли за резервация</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Стая
        </dt>
        <dd class="col-sm-10">
            Id: @Html.DisplayFor(model => model.Room.ID) <br />
            Номер: @Html.DisplayFor(model => model.Room.number)<br />
            Вместимост: @Html.DisplayFor(model => model.Room.capacity) души
            Тип: @Html.DisplayFor(model => model.Room.roomType) <br />
            Ценоразпис: @Html.DisplayFor(model => model.Room.priceForAdult) за възрастен и 
            @Html.DisplayFor(model => model.Room.priceForChild) за дете за една нощувка
        </dd>
        <dt class="col-sm-2">
            Настаняване
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.checkInDate)
        </dd>
        <dt class="col-sm-2">
            Освобождаване
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.vacatingDate)
        </dd>
        <dt class="col-sm-2">
            Закуска
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.includingBreakfast)
        </dd>
        <dt class="col-sm-2">
            AllInclusive
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.isAllInclusive)
        </dd>
        <dt class="col-sm-2">
            Сума
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.totalPrice)
        </dd>
    </dl>
    @if (Model.ReservationClients != null)
    {
        @foreach (var Item in Model.ReservationClients)
        {
            <a asp-controller="ReservationClients" asp-action="Details" asp-route-id="@Item.Id">
                Имена: @Item.Client.firstName @Item.Client.lastName<br />
                Телефонен номер: @Item.Client.phoneNumber<br />
                Пълнолетен/а: @if (Item.Client.isAdult == true)
                {<h7>Да</h7>}
                @if (Item.Client.isAdult != true)
                {<h7>Не</h7>}
                <br/>
                <hr />
            </a>

        }
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактирай</a> |
    <a asp-action="Index">Назад към резервации</a>
</div>
